{
  "name": "temp-mail",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "wrangler dev --remote",
    "deploy": "wrangler deploy --minify",
    "tail": "wrangler tail",
    "cf-typegen": "wrangler types",
    "db:create": "wrangler d1 create temp-mail-d1",
    "db:tables": "wrangler d1 execute temp-mail-d1 --file ./sql/schema.sql --remote",
    "db:indexes": "wrangler d1 execute temp-mail-d1 --file ./sql/indexes.sql --remote",
    "kv:create": "wrangler kv namespace create temp-mail-kv --preview",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write --unsafe ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write --unsafe ./src",
    "build": "tsc --noEmit",
    "knip": "knip"
  },
  "dependencies": {
    "@grammyjs/commands": "^1.2.0",
    "@grammyjs/menu": "^1.3.1",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.0",
    "@hono/zod-validator": "^0.7.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@scalar/hono-api-reference": "^0.9.18",
    "grammy": "^1.38.2",
    "hono": "^4.9.7",
    "html-to-text": "^9.0.5",
    "postal-mime": "^2.4.4",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@cloudflare/workers-types": "^4.20250918.0",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^24.4.0",
    "knip": "^5.63.1",
    "typescript": "^5.9.2",
    "wrangler": "^4.36.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
