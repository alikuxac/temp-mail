{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".wrangler/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format:check": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "check:fix": {
      "cache": false
    },
    "check": {
      "cache": false
    }
  }
}
